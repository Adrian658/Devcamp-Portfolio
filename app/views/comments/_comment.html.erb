<div class="comment-card">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-10">
          <div class="">
            <%= comment.content %>
          </div>
          <div class="comment-attribution">
            <%= distance_of_time_in_words(comment.created_at, Time.now)%> ago
            by <%= comment.user.first_name %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
