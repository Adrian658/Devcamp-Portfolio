<div class="container portfolio-container">
	<div class="row">
		<div class="col-md-12">
			<%= link_to 'View all', portfolios_path, class: 'nav-link' %>
			<%= link_to "Edit", edit_portfolio_path(@portfolio_item.id), class: 'nav-link' if logged_in?(:site_admin) %>
			<%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'nav-link' if logged_in?(:site_admin) %>
		</div>
		<div class="col-md-7">
			<%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
		</div>
		<div class="col-md-5">

			<h3><%= @portfolio_item.title %></h3>

			<em><%= @portfolio_item.subtitle %></em>

			<p><%= @portfolio_item.body %></p>
			<hr>
			<h3>Technologies Used</h3>
			<% @portfolio_item.technologies.each do |technology| %>
				<p> <%= technology.name %> </p>
			<% end %>

		</div>
	</div>
</div>
