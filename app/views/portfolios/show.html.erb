<div class="container portfolio-container">
	<div class="row">
		<div class="col-md-12">

		</div>
		<div class="col-md-7">
			<%= image_tag @portfolio_item.main_image, width: '100%' %>
		</div>
		<div class="col-md-5">

			<h3><%= @portfolio_item.title %></h3>

			<em><%= @portfolio_item.subtitle %></em>

			<p><%= @portfolio_item.body %></p>
			<hr>
			<h3>Technologies Used</h3>
			<% @portfolio_item.technologies.each do |technology| %>
				<p> <%= technology.name %> </p>
			<% end %>

			<li class="nav-item"><%= link_to 'View all', portfolios_path, class: 'nav-link' %></li>
			<li class="nav-item"><span><%= link_to "Edit", edit_portfolio_path(@portfolio_item.id), class: 'nav-link' if logged_in?(:site_admin) %></span></li>
			<li class="nav-item"><span><%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'nav-link' if logged_in?(:site_admin) %></span></li>


		</div>
	</div>
</div>
