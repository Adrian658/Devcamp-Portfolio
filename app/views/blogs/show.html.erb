<div class="col-md-8 blog-main">

  <% if logged_in?(:site_admin) %>
    <h3 class="pb-3 mb-4 font-italic border-bottom new-blog">
      <%= link_to 'Draft a New Blog', new_blog_path, class: "btn btn-secondary" %>
    </h3>
  <% end %>

  <h2><%= @blog.title %></h2>
  <p><%= @blog.body %></p>
  <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-secondary", id: "back-button" if logged_in?(:site_admin) %>
  <%= link_to 'Back', blogs_path, class: "btn btn-secondary", id: "back-button" %>

  <!-- start of comment form -->
  <% unless current_user.is_a? GuestUser %>
    <%= form_for @comment, url: '#' do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <%= f.submit 'Post Comment', class: 'btn btn-secondary' %>
    <% end %>
  <% end %>
  <!-- end of comment form -->

  <%= render @blog.comments %>

</div>
