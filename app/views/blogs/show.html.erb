<div class="col-md-12 blog-main text-light">

    <div class="card card-body bg-blog blog-post p-5">
        <strong class="text-center text-dark blog-post-title"><%= @blog.title %></strong>

        <nav class="breadcrumb">
          <%= link_to 'Blogs', blogs_path, class: 'pr-2 pl-2' %>/
          <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'pr-2 pl-2' %>/
          <span class="pl-2"><%= @blog.title %></span>
    
          <% if logged_in?(:site_admin) %>
          <span class="ml-auto">
            <a href="<%= edit_blog_path(@blog) %>"><i class="fas fa-edit"></i></a>
            <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= @blog %>"><i class="fas fa-trash-alt"></i></a>
          </span>
          <% end %>
        </nav>
    
        <%= image_tag @blog.image, class: "", width: '100%', height: '300rem' %>

        <i class="blog-show-updated_at pt-3">Published <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago</i>
        
        <hr> 

        <p class=""><%= markdown(@blog.body) %></p>
    
        <%= link_to 'Back', blogs_path, class: "btn btn-secondary", id: "back-button" %>
    
        <div id="comments" class="pb-5" data-blog-id="<%= @blog.id %>">
          <%= render @blog.comments %>
        </div>
    
        <%= render 'comments/comment_form' %>
    </div>

</div>
