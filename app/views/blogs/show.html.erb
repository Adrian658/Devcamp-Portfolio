<div class="col-md-12 blog-main">

  <h2><%= @blog.title %></h2>

  <nav class="breadcrumb">
    <%= link_to 'Blogs', blogs_path, class: 'breadcrumb-item' %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
    <span class="breadcrumb-item active"><%= @blog.title %></span>

    <% if logged_in?(:site_admin) %>
    <span class="ml-auto">
      <a href="<%= edit_blog_path(@blog) %>"><i class="fas fa-edit"></i></a>
      <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= @blog %>"><i class="fas fa-trash-alt"></i></a>
    </span>
    <% end %>
  </nav>

  <hr>

  <p><%= markdown(@blog.body) %></p>

  <%= link_to 'Back', blogs_path, class: "btn btn-secondary", id: "back-button" %>

  <%= render 'comments/comment_form' %>

  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>

</div>
