<div class="row">
        <div class="col-md-12 pl-3">
            <div class="row blog-top-bar">
                    <div class="col-md-0">
                        
                    </div>
                    <div class="col-md-12 text-light">
                            <div class="menu-btn text-center pt-1 pb-1">
                                    <a onclick="documentTrack('#');" href="#">
                                        Topics
                                        <i class="fa fa-chevron-down"></i>
                                    </a>
                                </div>
                                <div class="header">
                                    <div class="pl-3 pt-4 pb-1 link-container">
                                        <% @side_bar_topics.each do |topic| %>
                                            <p class='font-italic'><%= link_to topic.title, topic_path(topic) %></p>
                                        <% end %>
                                    
                                        <% if logged_in?(:site_admin) %>
                                            <p><%= link_to 'Draft a New Blog', new_blog_path, class: "" %></p>
                                        <% end %>
                                    </div>
                                </div> 
                    </div>
                    <div class="col-md-0">
                            
                    </div>
            </div>
        </div>
</div>

    <script type="text/javascript">
    $(document).ready(function(){
        $(".menu-btn").on('click',function(e){
            e.preventDefault();
            
            //Check this block is open or not..
            if(!$(this).next().hasClass("open")) {
            $(".header").slideDown(400);
            //$(this).hide("slide", { direction: "left" }, 400);
            $(".header").addClass("open");
            $(this).find("i").removeClass().addClass("fa fa-chevron-up");
            //$(this).addClass("shadow");
            }
            
            else if($(this).next().hasClass("open")) {
            $(".header").removeClass("open");
            $(".header").slideUp(400);
            $(this).find("i").removeClass().addClass("fa fa-chevron-down");
            //$(this).removeClass("shadow");
            }
        });
        });
    </script>