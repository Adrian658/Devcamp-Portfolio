<div class="blog-sidebar border-left-blue">

  <div class="info-text-box text-muted">
    <div class="first-msg visible">
      This 1 blog contains in depth descriptions of some of my favourite projects I have worked on.
      Check them out and comment if you're interested!
    </div>
    <div class="hidden">
      This 2 blog contains in depth descriptions of some of my favourite projects I have worked on.
      Check them out and comment if you're interested!
    </div>
    <div class="last-msg hidden">
      This 3 blog contains in depth descriptions of some of my favourite projects I have worked on.
      Check them out and comment if you're interested!
    </div>
  </div>

  <%= source_helper("alert alert-info alert-dismissible fade show blog-sidebar-source") %>

</div>

<script type="text/javascript">
function random_no(){
     var ran=Math.random();
     jQuery('.blog-sidebar').html(ran);
}

function change_text(fade_time){
    var displayed = $( ".visible" )[0];
    if (displayed == null) {
      displayed = $(".first-msg")[0];
    }
    if ($(displayed).hasClass("last-msg")) {
      var next_displayed = $(".first-msg")[0];
    }
    else {
      var next_displayed = $(displayed).next();
    }
    $(displayed).hide("blind", { direction: "left" }, fade_time);
    $(displayed).removeClass("visible");
    setTimeout(function(){
      $(next_displayed).show("blind", { direction: "left" }, fade_time);
      $(next_displayed).removeClass("hidden").addClass("visible");
    }, fade_time+100);
}

//timerRef = window.setInterval(function(){
       /// call your function here
//      random_no();
//}, 3000);
$(".hidden").hide();
var timerRef;
clearInterval(timerRef);
timerRef = window.setInterval(function(){
    change_text(800);
}, 10000)
</script>
